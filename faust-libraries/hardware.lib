declare name "Faust Ambisonic Element Library";
declare version "0.1";
declare author "Giuseppe Silvi";
declare license "CC4";

//-------------------------------------------- RME FireFace 800 - INPUT SELECTOR
//-------------------------------------------------------------------- 18 INPUTS
ff800 = ba.selectn(18,channel) : shmeter
  with{
    channel = nentry("[01] RME FF800 - INPUT SELECTOR
      [style:menu{
      'Analog IN 1':0;
      'Analog IN 2':1;
      'Analog IN 3':2;
      'Analog IN 4':3;
      'Analog IN 5':4;
      'Analog IN 6':5;
      'Analog IN 7':6;
      'Analog IN 8':7;
      'Analog IN 9':8;
      'Analog IN 10':9;
      'ADAT IN 1':10;
      'ADAT IN 2':11;
      'ADAT IN 3':12;
      'ADAT IN 4':13;
      'ADAT IN 5':14;
      'ADAT IN 6':15;
      'ADAT IN 7':16;
      'ADAT IN 8':17
      }]", 0, 0, 18, 1) : int;
  };

//------------------------------------- RME FireFace 800 - STEREO INPUT SELECTOR
//-------------------------------------------------------------------- 18 INPUTS
ff800_ST = si.bus(18) <: ba.selectn(18,lchannel),
                         ba.selectn(18,rchannel) : shmeter, shmeter
  with{
    rchannel = lchannel+(1);
    lchannel = nentry("[01] RME FF800 - INPUT SELECTOR
      [style:menu{
      'Analog IN 1-2':0;
      'Analog IN 3-4':2;
      'Analog IN 5-6':4;
      'Analog IN 7-8':6;
      'Analog IN 9-10':8;
      'ADAT IN 1-2':10;
      'ADAT IN 3-4':12;
      'ADAT IN 5-6':14;
      'ADAT IN 7-8':16
      }]", 0, 0, 18, 1) : int;
  };

//--------------------------------------- RME FireFace 800 - WXYZ INPUT SELECTOR
//-------------------------------------------------------------------- 18 INPUTS
ff800_WXYZ = si.bus(18) <: ba.selectn(18,wchannel),
                           ba.selectn(18,xchannel),
                           ba.selectn(18,ychannel),
                           ba.selectn(18,zchannel) :
                           shmeter, shmeter, shmeter, shmeter
  with{
    zchannel = ychannel+(1);
    ychannel = xchannel+(1);
    xchannel = wchannel+(1);
    wchannel = nentry("[01] RME FF800 - INPUT SELECTOR
      [style:menu{
      'Analog IN 1-2-3-4':0;
      'Analog IN 5-6-7-8':4;
      'ADAT IN 1-2-3-4':10;
      'ADAT IN 5-6-7-8':14
      }]", 0, 0, 18, 1) : int;
  };

